<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="rapport_template" pageWidth="595" pageHeight="842"
              columnWidth="515" leftMargin="40" rightMargin="40"
              topMargin="50" bottomMargin="50" uuid="123e4567-e89b-12d3-a456-426614174000">

    <!-- === Paramètres === -->
    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="author" class="java.lang.String"/>

    <!-- === Champs du datasource mainData === -->
    <field name="product" class="java.lang.String"/>
    <field name="price" class="java.lang.String"/>
    <field name="quantity" class="java.lang.String"/>

    <!-- === Bande Titre du rapport === -->
    <title>
        <band height="60">
            <staticText>
                <reportElement x="0" y="0" width="200" height="20"/>
                <text><![CDATA[Titre du Rapport :]]></text>
            </staticText>
            <textField>
                <reportElement x="200" y="0" width="300" height="20"/>
                <textFieldExpression><![CDATA[$P{reportTitle}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="30" width="200" height="20"/>
                <text><![CDATA[Auteur :]]></text>
            </staticText>
            <textField>
                <reportElement x="200" y="30" width="300" height="20"/>
                <textFieldExpression><![CDATA[$P{author}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- === En-tête des colonnes === -->
    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="200" height="20" backcolor="#E0E0E0"/>
                <text><![CDATA[Produit]]></text>
            </staticText>
            <staticText>
                <reportElement x="200" y="0" width="150" height="20" backcolor="#E0E0E0"/>
                <text><![CDATA[Prix]]></text>
            </staticText>
            <staticText>
                <reportElement x="350" y="0" width="150" height="20" backcolor="#E0E0E0"/>
                <text><![CDATA[Quantité]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- === Détails : une ligne par enregistrement === -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="200" height="20"/>
                <textFieldExpression><![CDATA[$F{product}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="200" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{price}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="350" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>
