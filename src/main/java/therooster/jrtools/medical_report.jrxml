<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="rapport_medical" pageWidth="595" pageHeight="842"
              columnWidth="515" leftMargin="40" rightMargin="40"
              topMargin="50" bottomMargin="50">

    <!-- === Paramètres simples (issus du JSON) === -->
    <parameter name="IDCONSULTATION" class="java.lang.String"/>
    <parameter name="IDPATIENT" class="java.lang.String"/>
    <parameter name="PATIENT_NAME" class="java.lang.String"/>
    <parameter name="SEX" class="java.lang.String"/>
    <parameter name="DATE_OF_BIRTH" class="java.lang.String"/>
    <parameter name="NATIONALITY" class="java.lang.String"/>
    <parameter name="REGION" class="java.lang.String"/>
    <parameter name="RELIGION" class="java.lang.String"/>
    <parameter name="PROFESSION" class="java.lang.String"/>
    <parameter name="MARITAL_STATUS" class="java.lang.String"/>
    <parameter name="STUDY_LEVEL" class="java.lang.String"/>
    <parameter name="REFERENT_NAME" class="java.lang.String"/>
    <parameter name="CARACTERISATION_SYMPTOME" class="java.lang.String"/>
    <parameter name="TRAITEMENTS_RECUS" class="java.lang.String"/>
    <parameter name="ANTECEDENT_MEDICAL" class="java.lang.String"/>
    <parameter name="ANTECEDENT_CHIRURGICAL" class="java.lang.String"/>
    <parameter name="ALCOOL" class="java.lang.String"/>
    <parameter name="tabac" class="java.lang.String"/>
    <parameter name="autre_drogue" class="java.lang.String"/>
    <parameter name="groupe_sanguin" class="java.lang.String"/>
    <parameter name="rhesus" class="java.lang.String"/>
    <parameter name="electrophorese" class="java.lang.String"/>
    <parameter name="hepatiteB" class="java.lang.String"/>
    <parameter name="autre_vaccin" class="java.lang.String"/>
    <parameter name="antecedent_ascendant" class="java.lang.String"/>
    <parameter name="antecedent_collateral" class="java.lang.String"/>
    <parameter name="antecedent_descendant" class="java.lang.String"/>
    <parameter name="oms" class="java.lang.String"/>
    <parameter name="paleur" class="java.lang.String"/>
    <parameter name="ictere" class="java.lang.String"/>
    <parameter name="deshydratation" class="java.lang.String"/>
    <parameter name="poid_actuel" class="java.lang.String"/>
    <parameter name="poid_habituel" class="java.lang.String"/>
    <parameter name="taille" class="java.lang.String"/>
    <parameter name="imc" class="java.lang.String"/>
    <parameter name="ta" class="java.lang.String"/>
    <parameter name="pouls" class="java.lang.String"/>
    <parameter name="spO2" class="java.lang.String"/>
    <parameter name="bilan_biologique" class="java.lang.String"/>
    <parameter name="bilan_morphologique" class="java.lang.String"/>
    <parameter name="bilan_fonctionnel" class="java.lang.String"/>
    <parameter name="mesure_non_pharmacologique" class="java.lang.String"/>
    <parameter name="mesure_pharmacologique" class="java.lang.String"/>
    <parameter name="autre_traitement" class="java.lang.String"/>

    <!-- === Champs pour la collection motif_apparition_params === -->
    <field name="motif" class="java.lang.String"/>
    <field name="temp_apparition" class="java.lang.String"/>

    <!-- === PAGE HEADER (Infos patient) === -->
    <title>
        <band height="100">
            <textField>
                <reportElement x="0" y="0" width="500" height="20"/>
                <textFieldExpression><![CDATA["Consultation : " + $P{IDCONSULTATION}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="25" width="500" height="20"/>
                <textFieldExpression><![CDATA["Patient : " + $P{PATIENT_NAME} + " (" + $P{SEX} + ")"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="50" width="500" height="20"/>
                <textFieldExpression><![CDATA["Date de naissance : " + $P{DATE_OF_BIRTH}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- === Sous-rapport : Motifs d’apparition === -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="250" height="20"/>
                <textFieldExpression><![CDATA[$F{motif}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="250" y="0" width="250" height="20"/>
                <textFieldExpression><![CDATA[$F{temp_apparition}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>
